{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "outDir": "dist",
    "lib": [
      "ESNext"
    ]
  }
}
